<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hooooong.com.customview.CustomWidgetActivity">

    <hooooong.com.customview.AniButton
        android:id="@+id/aniButton"
        app:animation="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomWidget animation 속성 적용"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <hooooong.com.customview.AniButton
        app:animation="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomWidget animation 속성 미적용"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/aniButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
